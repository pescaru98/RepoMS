                        <div class="modal-body">

                            <div class="form-group" style="text-align: -webkit-center;">

                                <asp:TextBox type="number" placeholder="Amount" runat="server" ID="balanceAdd" CssClass="form-control col-10" Width="254px"></asp:TextBox>
                                <asp:RequiredFieldValidator ID="RequiredFieldValidator3" runat="server" CssClass="redClr" ControlToValidate="balanceAdd" ErrorMessage="Please enter a value" ForeColor="Red"></asp:RequiredFieldValidator>
                            </div>
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <asp:Button ID="btnAddBalance" runat="server" CssClass="btn btn-primary col-8" OnClick="ButtonAddBalance_Click" Text="Login" Width="214px" />
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>

                    </div>
